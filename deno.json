{
  "compilerOptions": {
    "allowJs": false,
    "lib": ["deno.window", "es2021"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
	"tasks": {
		"day1": "deno run --allow-read ./src/day1/main.ts",
		"day1-dev": "denon run --allow-read ./src/day1/main.ts"
	},
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["camelcase", "explicit-function-return-type"],
      "exclude": []
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
